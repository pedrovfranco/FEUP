package dkeep.cli;

import dkeep.logic.GameState;

import java.util.Scanner;


public class Main {
	public static void main(String[] args)
	{
		
		System.out.println("||--- Welcome to the Dungeon Keep ---||");
		System.out.println("\n Level 1: \n");
		
		Scanner s = new Scanner(System.in);
		GameState gs = new GameState();
		
		char temp;
		
		gs.setGuard();
		while(gs.level == 0)
		{
			gs.map.printmap(gs.level);
				
			temp = s.next().charAt(0);
			
			gs.update(temp);
			gs.checkCollision();
			
		}
		
		if (gs.level == -1) // Print map if lost
		{
			gs.map.printmap(0);
			System.out.println("Game over!");
			s.close();
			return;
		}

		
		System.out.println("\n Level 2: \n");
		
		while(gs.level == 1)
		{
			gs.map.printmap(gs.level);
			
			temp = s.next().charAt(0);
			
			gs.update(temp);
			gs.checkCollision();

		}
		
		if (gs.level == -1)
		{
			gs.map.printmap(1);
			System.out.println("Game over!");
			s.close();
			return;
		}
		
		if (gs.level == 2)
		{
			System.out.println("Congratulations! You won!");
		}
		
		s.close();
		
		return;
	}

}

