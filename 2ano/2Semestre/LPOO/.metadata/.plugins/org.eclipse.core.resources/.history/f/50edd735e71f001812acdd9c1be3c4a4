package recipes;

import java.util.ArrayList;
import java.util.List;

public class RecipeStep
{
	private String name;
	private String action;
	
	private List< Pair<SimpleIngredient, Float> > ingredients = new ArrayList< Pair<SimpleIngredient, Float> >();
	
	public RecipeStep(String name, String action)
	{
		if (name == null || action == null)
			throw new IllegalArgumentException();
		
		this.name = name;
		this.action = action;
	}
	
	public String getName()
	{
		return name;
	}
	
	public String getAction()
	{
		return action;
	}
	
	public boolean addIngredient(SimpleIngredient input, float quantity)
	{
		if (!ingredients.contains(input))
		{
			ingredients.add(new Pair<SimpleIngredient, Float>(input, quantity));
			return true;
		}
		else
			return false;
			
	}
	
	public Float getQuantity(SimpleIngredient input)
	{
		for (int i = 0; i < ingredients.size(); i++)
		{
			if (ingredients.get(i).getFirst().equals(input))
				return ingredients.get(i).getSecond();
		}
		
		return -1F;
	}
	
	public int getIngredientCount()
	{
		return ingredients.size();
	}
}
