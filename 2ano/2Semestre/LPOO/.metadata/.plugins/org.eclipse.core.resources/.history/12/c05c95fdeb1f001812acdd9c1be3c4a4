package recipes;

public class Ingredient
{
	private String name;
	
	public Ingredient(String name)
	{
		if (name == null)
			throw new IllegalArgumentException();
		this.name = name;
	}
	
	public String getName()
	{
		return name;
	}
	
	@Override
	public boolean equals(Object obj)
	{
		if (obj != null)
		{
			Ingredient foo = (Ingredient) obj;
			return (this.name == foo.name);
		}
		
		return false;
	}
}
